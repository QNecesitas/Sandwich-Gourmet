<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30sp"
        android:layout_gravity="center">

        <LinearLayout
            android:background="@color/amarillo_clarito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/li_pedido_enviado_cerrar"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_gravity="end"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                app:tint="@color/black" />

            <TextView
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pedido_enviado_correctamente"
                android:textSize="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"/>

            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/local_shipping"
                android:layout_gravity="center"/>

            <TextView
                android:textAlignment="center"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/espere_la_confirmacion_de_su_pedido"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"/>

<!--            CardView ir a mis pedidios-->
            <androidx.cardview.widget.CardView
                android:id="@+id/li_pedido_enviado_cv_ir_a_mis_pedidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:elevation="5sp"
                android:translationZ="5sp"
                app:cardCornerRadius="20sp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ir_a_mis_pedidos"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/amarillo_logo"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2sp"
                            android:background="@color/amarillo_logo"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:src="@drawable/receipt_long"
                        android:layout_gravity="center"
                        app:tint="@color/amarillo_logo" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
