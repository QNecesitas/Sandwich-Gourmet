<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="50sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/li_agregar_producto_sandwich_menu_imagen"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:src="@android:drawable/ic_menu_gallery"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/li_agregar_producto_sandwich_menu_imagen"
            android:layout_marginTop="20sp">

            <Spinner
                android:id="@+id/li_agregar_producto_sandwich_menu_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"/>

            <EditText
                android:id="@+id/li_agregar_producto_sandwich_menu_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/li_agregar_producto_sandwich_menu_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Precio"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/li_agregar_producto_sandwich_menu_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/textview_redondeado_rojo_chip"
            android:paddingStart="10sp"
            android:paddingTop="5sp"
            android:paddingEnd="10sp"
            android:paddingBottom="5sp"
            android:text="@string/cancelar"
            android:textColor="@color/rojo_logo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/li_agregar_producto_sandwich_menu_agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_redondeado_rojo_chip"
            android:text="@string/agregar"
            android:textColor="@color/rojo_logo"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40sp"
            android:layout_marginBottom="10sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>