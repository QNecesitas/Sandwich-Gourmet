<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10sp">
    <LinearLayout
        android:layout_margin="10sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/li_cuantos_sandwiches_cerrar"
            android:layout_width="20sp"
            android:layout_height="20sp"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_gravity="end"/>

        <TextView
            android:textAlignment="center"
            android:text="¿Cuántos sandwiches de este tipo desea?"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <EditText
            android:inputType="number"
            android:id="@+id/li_cuantos_sandwiches_et"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"
            android:maxLength="4"
            android:text="1"/>

        <Button
            android:id="@+id/li_cuantos_sandwiches_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/confirmar"
            android:textColor="@color/black"
            android:backgroundTint="@color/amarillo_logo"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>