<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pago_con_transferm_vil"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pasos_pago_transfermovil"
            android:textSize="16sp"
            android:layout_marginTop="10sp"/>

        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@drawable/qr_transfermovil"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puede usar este cÃ³digo QR para el pago"
            android:layout_marginTop="5sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/li_pago_transfermovil_tv_aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aceptar"
            android:textSize="16sp"
            android:textColor="@color/azul"
            android:background="@drawable/textview_redondeado_azul_chip"
            android:layout_gravity="end"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>